<div class="container">
    <table class="table table-striped table-bordered">
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Description</th>
            <th>Edit</th>
            <th>Delete</th>
            <th>View</th>

        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>@item.firstname </td>
        <td>@item.price</td>
        <td>@item.quantity</td>
        <td>@item.description</td>
        <td><a href="/home/edit/@item.Id">Edit Order</a></td>
        <td><a href="/home/delete/@item.Id">Delete Order</a></td>
        <td><a href="/home/view/@item.Id">View Order</a></td>

    </tr>
        }
    </table>
</div>
