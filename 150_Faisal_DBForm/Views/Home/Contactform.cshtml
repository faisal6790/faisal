@using _150_Faisal_DBForm.Models
@model List<Contact>


<link href="~/css/Style.css" rel="stylesheet" />
<div class="row justify-content-center">
    <br />
    <h1 style="color: rgb(11, 94, 215); text-align: center; margin-top: 20px">Create Your Order</h1>
    <h1> @TempData["message"]</h1>
    <div class="col-md-3">
        <form action="/home/Contactform" method="post">
            <br />
            <label class="form-text">Name:</label>
            <input type="text" name="firstname" class="form-control" />
            <br />
           
            <label class="form-text">price</label>
            <input type="number" name="price" class="form-control" />
            <br />
        
            <label class="form-text"> Quantity</label>
            <select name="quantity">
                <option value="1" selected>1</option>
                <option value="2">2</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
            </select>
            <br />
            <br />
            <label class="form-text">Description</label>
            <textarea name="description" rows="5" class="form-control" placeholder="Write Description"></textarea>
            <br />
            <br />
            <input class="btn btn-primary" type="submit" value="Submit your Order" />
            <br />
            <br />
        </form>
    </div>
</div>

